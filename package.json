{
  "private": true,
  "description": "Script for monitoring public codes on GitHub",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prettier:fix": "prettier --write ./src/**/*.ts",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "npm run eslint -- --fix",
    "lint": "npm run eslint",
    "fix": "npm run prettier:fix && npm run eslint:fix",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js"
  },
  "dependencies": {
    "gh-got": "^10.0.0",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@sota1235/eslint-config": "^4.2.3",
    "@types/jest": "26.0.10",
    "@types/node": "14.6.2",
    "eslint": "^8.56.0",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "lint-staged": "10.2.13",
    "prettier": "2.1.1",
    "ts-jest": "26.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint",
      "git add"
    ]
  }
}
