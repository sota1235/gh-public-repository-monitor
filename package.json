{
  "private": true,
  "description": "Script for monitoring public codes on GitHub",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "fix": "prettier --write ./src/**/*.ts",
    "tslint": "tslint -c tslint.json \"src/**/*.ts\"",
    "lint": "npm run fix && npm run tslint",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js"
  },
  "dependencies": {
    "gh-got": "^10.0.0",
    "node-fetch": "^2.6.7",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.10",
    "@types/node": "14.6.2",
    "@types/node-fetch": "2.5.7",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "lint-staged": "10.2.13",
    "prettier": "2.1.1",
    "ts-jest": "26.3.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint",
      "git add"
    ]
  }
}
