{
  "name": "gh-monitor",
  "version": "0.0.1",
  "description": "Script for monitoring public codes on GitHub",
  "main": "index.js",
  "engines": {
    "node": ">=v10.10.0"
  },
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "fix": "prettier --write ./src/**/*.ts",
    "tslint": "tslint -c tslint.json \"src/**/*.ts\"",
    "lint": "npm run fix && npm run tslint",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js"
  },
  "author": "@sota1235<sota1235@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "gh-got": "^9.0.0",
    "node-fetch": "^2.6.0",
    "typescript": "^3.6.2"
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@types/node": "13.13.4",
    "@types/node-fetch": "2.5.7",
    "husky": "4.2.5",
    "jest": "25.5.3",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "ts-jest": "24.3.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint",
      "git add"
    ]
  }
}
