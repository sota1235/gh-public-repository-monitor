{
  "private": true,
  "description": "Script for monitoring public codes on GitHub",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prettier:fix": "prettier --write ./src/**/*.ts",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "npm run eslint -- --fix",
    "lint": "npm run eslint",
    "fix": "npm run prettier:fix && npm run eslint:fix",
    "test": "jest",
    "test:ci": "jest -c ./jest.config.ci.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@octokit/graphql": "^7.0.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@sota1235/eslint-config": "^4.2.3",
    "@types/jest": "26.0.10",
    "@types/node": "14.6.2",
    "eslint": "^8.56.0",
    "husky": "9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run fix"
    ]
  }
}
